---
import ButtonLink from "./shared/ButtonLink.astro";
import ButtonLinkedin from "./shared/ButtonLinkedin.astro";

---

<section>
    <!-- Image container -->
    

    <!-- Content -->
    <div class="mt-4 flex flex-col gap-2">
        <div class="flex items-center justify-center gap-1">
            <div class="w-24 h-24">
                <img loading="lazy" alt="Carlos profile picture" src="https://placehold.co/1200x1200/000000/FFFFFF/png"
                    class="rounded-full aspect-auto"
                />
            </div>
            <div>
                <h1 class="text-xl font-bold">Hello, I'm Carlos Estrada</h1>
                <p class="text-lg my-2 text-gray-700">
                    Software developer
                </p>
            </div>
        </div>

        <div class="flex gap-2 justify-center">
            <ButtonLinkedin href="https://www.linkedin.com/in/caresle/">
                <img src="/linkedin-icon.png" alt="Linkedin icon" class="w-6 h-6" />
                Linkedin
            </ButtonLinkedin>
            <ButtonLink href="/">Contact Me</ButtonLink>
        </div>

    </div>
</section>