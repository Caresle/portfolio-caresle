---
import NavigationLink from "./NavigationLink.astro"

const items = [
    {
        name: 'Experience',
        href: "#experience",
    },
    {
        name: 'Projects',
        href: "#projects",
    },
    {
        name: 'Skills',
        href: "#skills",
    },
    {
        name: 'About',
        href: "#about",
    },
]
---
<header>
    <nav class="fixed w-full">    
        <div class="flex w-11/12 rounded-3xl my-2 justify-evenly p-2 bg-white/50 border border-gray-300 mx-auto
            backdrop-blur-sm max-w-xl dark:bg-slate-900/75 dark:border-slate-800 z-[10000] shadow-xl
            ">
            { items.map(e => <NavigationLink href={e.href} name={e.name} />)}
        </div>
    </nav>
</header>